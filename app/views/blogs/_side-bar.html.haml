.user-introduction
  %p プロフィール
  .user-introduction__name
  %p
    = @blog.user.name
  .user-introduction__image
    - if @blog.user.image.present?
      = image_tag(@blog.user.image.url)
    - else
      %P NO IMAGE
  .user-introduction__introduction
    %p 自己紹介：
    %p
      = @blog.user.introduction
  - if user_signed_in? &&  current_user.id == blog.user_id
    .user-edit
      =link_to 'プロフィール編集', edit_user_registration_path
    .blog-edit
      =link_to 'ブログ情報編集', edit_blog_path(@blog.id)
