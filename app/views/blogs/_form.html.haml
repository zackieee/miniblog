=form_for @blog do |f|
  .filed
    .field__title
      =f.label :ブログ名：
      %br
      =f.text_field :blog_name,value:"#{@blog.blog_name}", autofocus: true,class:'field__title__input',placeholder:'ブログ名を入力してください'
    .field__introduction
      =f.label :ブログの紹介文：
      %br
      =f.text_area :blog_introduction,value:"#{@blog.blog_introduction}",class:'field__introduction__input',placeholder:'どんなブログか紹介してください'
    .field__back-image
      ブログ背景イメージ：
      %label.field__image-input{for:"file"}
        #img_field{:onclick => "$('#file').click()"}
          - if @blog.image.present?
            = image_tag(@blog.image.url)
          - else
            %P NO IMAGE
        =f.file_field :image, class: "image", id: "file"
  .actions
    .actions__submit-btn
      = f.submit "登録", class:'blog-submit-btn'